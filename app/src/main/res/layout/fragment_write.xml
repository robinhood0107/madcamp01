<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_trip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="여행 제목을 입력하세요"
        android:minHeight="48dp" />
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_is_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="게시물 공개"
        android:checked="true" />

    <TextView
        android:id="@+id/text_travel_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:text="여행 기간: 설정되지 않음"
        android:textSize="14sp"
        android:textColor="#1976D2"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_add_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="사진 추가하기" />

    <Button
        android:id="@+id/btn_change_travel_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="여행 일짜 변경"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_photos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"
        android:text="저장하기"
        android:textColor="@android:color/white" />

</LinearLayout>