<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tv_write_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 게시물 작성"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Top Right Controls (Public Switch + Add Photo) -->
    <LinearLayout
        android:id="@+id/layout_top_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/tv_write_header"
        app:layout_constraintBottom_toBottomOf="@id/tv_write_header"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공개"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginEnd="4dp"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_is_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:thumbTint="#FFFFFF"
            app:trackTint="#1A1A1A" />

        <!-- Large Plus Button for adding photos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_photo"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="28sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#1A1A1A"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            app:rippleColor="#F0F0F0" />
    </LinearLayout>

    <!-- Trip Title Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_trip_title"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:boxStrokeColor="#E0E0E0"
        app:hintTextColor="#666666"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_write_header">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_trip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="여행 제목을 입력하세요"
            android:textSize="16sp"
            android:textColor="#333333"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Travel Period Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_travel_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F8F9FA"
        app:layout_constraintTop_toBottomOf="@id/layout_trip_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="#666666"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/text_travel_period"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="여행 기간: 설정되지 않음"
                android:textSize="13sp"
                android:textColor="#333333" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change_travel_info"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="변경"
                android:textSize="12sp"
                android:textColor="#1A1A1A"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Photos RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_photos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/card_travel_period"
        app:layout_constraintBottom_toTopOf="@id/btn_save"/>

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="게시물 업로드"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        android:backgroundTint="#1A1A1A"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>